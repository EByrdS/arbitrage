    "version": "0.2.0",
    "configurations": [
        {  
            // Choose process ID and attach debugger
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            // Launch the server in debug mode
            "name": "Debug Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}"
        },
        {
            // Debug the current test file
            "name": "Debug Test File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${file}"
        }    
    ]
}
